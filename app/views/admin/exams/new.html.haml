- provide(:title, 'Create Exam')

%h3 Create Exam
= form_for([:admin, @exam]) do |f|
  = f.label :name, "Name"
  = f.text_field :name
  = f.label :description, "Description"
  = f.text_area :description, :rows => 1
  %br
  = f.check_box :toPublish
  = "Publish"
  %br

  = f.fields_for :questions do |builder|
    = render "question_fields", :f => builder
  %p= link_to_add_fields "Add Question", f, :questions
  = f.submit "Create Exam"

%br
%hr

.links
  = link_to 'Cancel', admin_exams_path
