      %td<
        = link_to 'Delete', admin_exam_question_choice_path(@exam.id, @question.id, choice.id), :method => :delete

%br/
%hr

.links
  = link_to 'Add Choice', new_admin_exam_question_choice_path(@exam.id, @question.id)
  = " | "
  = link_to 'Back to Questions', admin_exam_questions_path(@exam.id)
  = " | "
  = link_to 'Back to Exams', admin_exams_path
