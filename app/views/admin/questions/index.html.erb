<h1><%= @exam.name %>'s Questions</h1>
<table>
  <tr>
    <th>#</th>
    <th>Question</th>
    <th>Date Created</th>
    <th>Last Update</th>
  </tr>
<% @questions.each do |question| %>
  <tr>
    <td><%= question.id %></td>
    <td><%= question.question %></td>
    <td><%= question.created_at %></td>
    <td><%= question.updated_at %> | </td>
    <td><%= link_to 'View', admin_exam_question_path(question.exam_id, question.id) %> | </td>
    <td><%= link_to 'Edit', edit_admin_exam_question_path(question.exam_id, question.id) %> | </td>
    <td><%= link_to 'Delete', admin_exam_question_path(question.exam_id, question.id), :method => :delete %></td>
  </tr>
<% end %>
</table>

<br/><hr>

<%= link_to 'Add Question', new_admin_exam_question_path(@exam.id) %> | 
<%= link_to 'Back to Exams', admin_exams_path %> | 
<%= link_to 'Back to Home', admin_root_path %>
