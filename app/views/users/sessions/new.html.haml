- provide(:title, "Sign In")

%h2 Sign in

= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
  %div
    = f.label :email
    = f.email_field :email

    = f.label :password
    = f.password_field :password

    %br
    - if devise_mapping.rememberable?
      = f.check_box :remember_me
      = "Remember Me"

    %br
    = f.submit "Sign in", :class => "button"

  %br
  = render "links"
